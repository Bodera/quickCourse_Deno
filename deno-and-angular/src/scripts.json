{
  "$schema": "https://deno.land/x/denon@2.5.0/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run app.ts",
      "desc": "run my app.ts file",
      "allow": ["net", "ffi", "env", "read", "write"],
      "unstable": true,
      "tsconfig": "tsconfig.json"
    }
  },
  "watcher": {
    "match": [
      "app.ts",
      "/./*.ts"
    ]
  }
}